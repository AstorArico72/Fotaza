doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/CSS", type="Text/CSS")
        title Fotaza
        link(rel="icon", href="/favicon", type="image/x-icon")
    body
        nav.navbar.navbar-expand-lg.navbar-nav.navbar-toggleable-sm.navbar-light.bg-light.border-bottom.box-shadow.mb-3.sticky-top
            div.container-fluid
                div.navbar-collapse.collapse.d-sm-inline-flex.justify-content-between
                    ul.navbar-nav.flex-grow-1.align-items-center
                        li.nav-item
                            h2
                                a.nav-link.text-dark(href="/Home") Fotaza
                        - if (IdUsuarioConectado == "NULL")
                            li.nav-item
                                button.btn.btn-primary
                                    a.nav-link.text-light(href="/Usuario/Ingresar") Iniciar Sesión
                        - else
                            li.nav-item
                                a.nav-link.text-success(href=`./Usuario/${IdUsuarioConectado}`)
                                    h4 #{UsuarioConectado}
                            li.nav-item
                                a.nav-link.text-danger(href="/Usuario/Salir")
                                    h5 Salir
                            li.nav-item
                                a.nav-link(href="/Posts/Subir")
                                    h5 Subir Post
                        li.nav-item
                            a.nav-link(href="/Posts")
                                h5 Subidas
                    form(action="/Posts/Buscar", method="get")
                        input(type="search", name="Tag", placeholder="Buscar etiquetas...")
        - if (QueryBusqueda != null)
            h2 Búsqueda: "#{QueryBusqueda}"
        - else
            h2 Posts de Fotaza

        - if (UploadList.length != 0)
            each Upload in UploadList
                div.bg-light.card-header.card
                    h3
                        a(href=`/Posts/Ver/${Upload ["ID"]}`) #{Upload ["Título_Post"]}
                    h4 Subido el #{Upload ["createdAt"]} por&nbsp;
                        a(href=`/Usuarios/${Upload ["Numero_OP"]}`) #{Upload ["Nombre_OP"]}
                    if (Upload ["Etiquetas"] != null)
                        h5 Etiquetas: #{Upload ["Etiquetas"]}
                    else
                        h5 Sin etiquetas
        - else
            h2 No hay resultados